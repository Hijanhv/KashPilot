  "share_target": {
    "action": "/split",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+kashpilot",
      "url": "/?payment=%s"
    }
  ],

  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 320
  }
